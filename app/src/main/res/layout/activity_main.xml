            android:layout_marginTop="16dp"
            android:text="@string/text_view14"
            android:textColor="#000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/thirteenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionEleven"
                android:text="@string/radio_btn13" />

            <RadioButton
                android:id="@+id/fourteenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionEleven"
                android:text="@string/radio_btn14" />

            <RadioButton
                android:id="@+id/fifteenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionEleven"
                android:text="@string/radio_btn15" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_view15"
            android:textColor="#000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sixteenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionTwelve"
                android:text="@string/radio_btn16" />

            <RadioButton
                android:id="@+id/seventeenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionTwelve"
                android:text="@string/radio_btn17" />

            <RadioButton
                android:id="@+id/eighteenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionTwelve"
                android:text="@string/radio_btn18" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/number_tenth_button"
                android:onClick="resetQuizzButton"
                android:text="@string/reset" />

            <Button
                android:id="@+id/submitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:contentDescription="@string/number_eleventh_button"
                android:onClick="submitQuizzButton"
                android:text="@string/submit" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>