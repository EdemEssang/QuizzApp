        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_view11"
            android:textColor="#000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/fifth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionEight"
                android:text="@string/radio_btn5" />

            <RadioButton
                android:id="@+id/sixth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionEight"
                android:text="@string/radio_btn6" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_view12"
            android:textColor="#000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/seventh_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionNine"
                android:text="@string/radio_btn7" />

            <RadioButton
                android:id="@+id/eighth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionNine"
                android:text="@string/radio_btn8" />

            <RadioButton
                android:id="@+id/ninth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionNine"
                android:text="@string/radio_btn9" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_view13"
            android:textColor="#000"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/tenth_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="questionTen"
                android:text="@string/radio_btn10" />

            <RadioButton
                android:id="@+id/eleventh_radio_button"
                android:layout_width="wrap_content"
